= form_with(model: user, local: true) do |form|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :username
    = form.text_field :username, id: :user_username
  .field
    = form.label :password_digest
    = form.text_field :password_digest, id: :user_password_digest
  .field
    = form.label :email
    = form.text_field :email, id: :user_email
  .field
    = form.label :dm
    = form.check_box :dm, id: :user_dm
  .field
    = form.label :roles
    = form.text_field :roles, id: :user_roles
  .field
    = form.label :reviews_count
    = form.number_field :reviews_count, id: :user_reviews_count
  .actions
    = form.submit
