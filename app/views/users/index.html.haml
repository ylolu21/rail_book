%p#notice= notice
%h1 Users
%table
  %thead
    %tr
      %th Username
      %th Password digest
      %th Email
      %th Dm
      %th Roles
      %th Reviews count
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.password_digest
        %td= user.email
        %td= user.dm
        %td= user.roles
        %td= user.reviews_count
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
